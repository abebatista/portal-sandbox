{
    "name": "dreamfactory/portal-sandbox",
    "description": "DreamFactory Services Platform(tm) Portal Sandbox Application",
    "homepage": "https://www.dreamfactory.com/",
    "keywords": [
        "oasys",
        "oauth",
        "authentication",
        "examples",
        "dsp"
    ],
    "type": "dreamfactory-application",
    "license": ["Apache-2.0"],
    "authors": [
        {
            "name": "Jerry Ablan",
            "email": "jerryablan@dreamfactory.com"
        }
    ],
    "support": {
        "email": "support@dreamfactory.com",
        "issues": "https://github.com/dreamfactorysoftware/portal-sandbox/issues",
        "wiki": "https://github.com/dreamfactorysoftware/portal-sandbox/wiki",
        "source": "https://github.com/dreamfactorysoftware/portal-sandbox"
    },
    "config": {
        "discard-changes": true
    },
    "minimum-stability": "dev",
    "repositories": [
        {
            "type": "pear",
            "url": "http://pear.php.net"
        }
    ],
    "require": {
        "php": "~5.3",
        "kisma/kisma": "~0.2",
        "dreamfactory/package-installer": "dev-develop as dev-master"
    },
    "require-dev": {
        "dreamfactory/oasys": "@stable",
        "dreamfactory/lib-php-common-platform": "@stable",
        "phpunit/phpunit": "@stable"
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "1.2.x-dev"
        },
        "data": {
            "application": {
                "name": "Portal Sandbox",
                "api-name": "portal-sandbox",
                "description": "A sample application that demonstrates the DSP portal service.",
                "is-active": true,
                "is-url-external": true,
                "url": "/pbox/index.php",
                "import-url": "https://github.com/dreamfactorysoftware/portal-sandbox/archive/master.zip"
            }
        },
        "config": ["config/app.config.php"],
        "links": [
            {
                "target": "src/",
                "link": "pbox"
            }
        ]
    }
}
