	"require":           {
		"php":                            "~5.3",
		"kisma/kisma":                    "~0.2",
		"dreamfactory/package-installer": "*"
	},
	"require-dev":       {
		"dreamfactory/oasys":                   "@stable",
		"dreamfactory/lib-php-common-platform": "@stable",
		"phpunit/phpunit":                      "@stable"
	},
	"extra":             {
		"branch-alias": {
		},
		"data":         {
			"application": {
				"name":              "Portal Sandbox",
				"api-name":          "pbox",
				"description":       "A sample application that demonstrates the DSP's portal service.",
				"start-url":         "/index.php",
				"url-is-external":   false,
				"import-url":        "https://github.com/dreamfactorysoftware/portal-sandbox/archive/master.zip",
				"active":            true,
				"fullscreen":        false,
				"fullscreen-toggle": true,
				"toggle-location":   "top"
			}
		},
		"links":        [
			{
				"target": "src/",
				"link":   "pbox"
			}
		]
	}
